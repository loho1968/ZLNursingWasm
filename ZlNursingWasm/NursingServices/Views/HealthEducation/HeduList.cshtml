@using NursingModel
@using Newtonsoft.Json
@model List<PatHeduRecPageView>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title></title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/popper_2.0.0.js"></script>
    <script src="~/js/NursingForm.js"></script>
    <script src="~/Bootstrap_4.1.1/dist/js/bootstrap.js"></script>
    <script src="~/bootstrap-select-1.13.9/dist/js/bootstrap-select.js"></script>

    <link rel="stylesheet" href="~/Bootstrap_4.1.1/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/bootstrap-select-1.13.9/dist/css/bootstrap-select.css">

    <link rel="stylesheet" href="~/css/Form.css"/>
</head>
<body>
<div id="accordionExample">
    <div class="form-group">
        @* <div class="card"> *@
        <div class="card-header">
            <table class="col-md-12">
                <tr>
                    <td>
                        <h3>健康宣教</h3>
                    </td>
                    <td style="text-align:right">
                        <a class="text-success" href="/HealthEducation/HeduGroupList?pid=@Html.Raw(ViewData["pid"])&pvid=@Html.Raw(ViewData["pvid"])&wardid=@Html.Raw(ViewData["wardid"])&executor=@Html.Raw(ViewData["executor"])&admissionDateTime=@Html.Raw(ViewData["admissionDateTime"])&isMobile=@Html.Raw(ViewData["isMobile"])">新 增</a>
                    </td>
                </tr>
            </table>
        </div>
        <div class="collapse show">
            <table class="table">
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-md-6">
                                <img src="~/img/helth.png"/>
                                <a href="/pda/HealthEducation/GetPatHeduRecByRecId?recId=@item.RecID&executor=@Html.Raw(ViewData["executor"])&pid=@Html.Raw(ViewData["pid"])&pvid=@Html.Raw(ViewData["pvid"])&wardid=@Html.Raw(ViewData["wardid"])&admissionDateTime=@Html.Raw(ViewData["admissionDateTime"])&isView=0&isMobile=@Html.Raw(ViewData["isMobile"])" class="card-link">@item.GroupName</a>
                                <br/>
                                <span style="font-size:12px;color:dimgrey">由 @item.Executor 于 @item.ExecuteTime 执行</span>
                            </td>
                            <td style="padding:0 10px 0 0;">
                                <br/>
                                <img src="~/img/next.png"/>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
        @* </div> *@
    </div>
</div>
<script type="text/javascript">
        $(function () {
            $(".table tr").click(function () {
                $(this).find(".card-link")[0].click();
            });
        });
    </script>
</body>
</html>